<%- include ('partials/header.ejs') %>
<%- include ('partials/homenavbar.ejs') %>
<body>
    <div class="container">
        <hr>
        <div class="jumbotron">
            <h1 class="display-4">Bem-vindo</h1>
            <p class="lead">Um Blog simples</p>
            <hr class="my-4">
            <p>Saiba mais abaixo!</p>
            <a class="btn btn-primary btn-lg" href="#" role="button">Ler mais</a>
        </div>
        <% articles.forEach(article =>{ %>
            <br>
            <div class="card">
                <div class="card-header">
                    <h2><%= article.title %></h2>
                </div>
                <div class="card-body">
                    <a class="btn btn-primary" href="/<%= article.slug %>">Ler artigo</a>
                </div>
            </div>
            <br>
        <% }) %>

        <div class="row">
            <div class="col col-12">
                <a style="float: right;" href="/articles/page/2">Next >>></a>
            </div>
        </div>
        <hr>
    </div>
</body>
